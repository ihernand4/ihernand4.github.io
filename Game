  <script>
    const boton = document.getElementById("boton");
    const mensaje = document.getElementById("mensaje");

    function mostrarBoton() {
      boton.style.display = "inline-block";
      mensaje.textContent = "";

      // Si no hace clic en 2 segundos, pierde
      setTimeout(() => {
        if (boton.style.display === "inline-block") {
          boton.style.display = "none";
          mensaje.textContent = "Â¡Perdiste! ðŸ˜¢";
        }
      }, 2000);
    }

    boton.addEventListener("click", () => {
      boton.style.display = "none";
      mensaje.textContent = "Â¡Ganaste! ðŸŽ‰";
    });

    // Inicia el juego despuÃ©s de un tiempo aleatorio
    setTimeout(mostrarBoton, Math.random() * 3000 + 1000);
  </script>
